<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="280dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/single_season_card_view"
    app:cardCornerRadius="10dp"
    android:background="@drawable/card_view_border"
    android:elevation="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/seasonView"
                android:scaleType="centerCrop"
                android:src="@drawable/place_holder"
                ></ImageView>

            <ImageButton
                android:id="@+id/favourite_tv_season_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_margin="1dp"
                android:background="@drawable/favourite_button"
                android:src="@drawable/favourite"></ImageButton>
        </FrameLayout>
        <TextView
            android:paddingVertical="15dp"
            android:gravity="center"
            android:ellipsize="marquee"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seasonNameTextView"
            style="@style/NormalTextStyle"
            ></TextView>

        <TextView
            android:paddingVertical="5dp"
            android:paddingHorizontal="5dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seasonNumberTextView"
            ></TextView>
    </LinearLayout>
</androidx.cardview.widget.CardView>